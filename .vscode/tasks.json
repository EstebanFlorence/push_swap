{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                //"-Wall",
                //"-Wextra",
                //"-Werror",
                "-g",
                "-Ilibft/include",
                "*.c",
				"libft/ft_printf/sources/*.c",
				"libft/srcs/*.c",
                "-o",
                "${fileDirname}/push_swap"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}